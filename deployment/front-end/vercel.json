{
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/build",
    "rewrites": [
      {
        "source": "/api/:path*",
        "destination": "https://your-backend-url.railway.app/api/:path*"
      }
    ],
    "env": {
      "REACT_APP_API_URL": "https://your-backend-url.railway.app"
    }
  }